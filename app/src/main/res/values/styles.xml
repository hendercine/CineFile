<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainPosterGrid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:columnWidth">@dimen/grid_col_width</item>
        <item name="android:verticalSpacing">@dimen/default_item_spacing</item>
        <item name="android:horizontalSpacing">@dimen/default_item_spacing</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="detail_plot_summary">
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="detail_wide_plot_summary">
        <item name="android:layout_margin">@dimen/default_item_spacing</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="detail_thumb_image">
        <item name ="android:layout_marginLeft">@dimen/margin_large</item>
        <item name ="android:layout_marginTop">@dimen/details_thumb_margin_top</item>

    </style>

    <style name="detail_wide_thumb_image">
        <item name ="android:layout_marginLeft">@dimen/margin_large</item>
        <item name ="android:layout_marginTop">@dimen/details_wide_thumb_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
        <item name ="android:src">@drawable/placeholder_portrait</item>

    </style>

    <style name="detail_title">
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:text">Movie Title</item>
    </style>

    <style name="detail_release">
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_marginRight">@dimen/margin_default</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:text">2015 released</item>
    </style>

    <style name="detail_vote_avg">
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:layout_marginLeft">@dimen/margin_default</item>
        <item name="android:gravity">bottom</item>
    </style>

</resources>
